{
  "name": "status-component-vue3",
  "version": "1.0.3",
  "author": "Vincent Ko",
  "description": "A Vue 3 component for displaying status indicators.",
  "main": "dist/status-component-vue3.umd.js",
  "module": "dist/status-component-vue3.mjs",
  "exports": {
    ".": {
      "import": "./dist/status-component-vue3.mjs",
      "require": "./dist/status-component-vue3.umd.js",
      "development": "./src/index.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run copy-core && vite build",
    "copy-core": "mkdir -p src/core && cp -r ../status-component-core/src/* src/core/",
    "clean-core": "rm -rf src/core",
    "prebuild": "npm run copy-core",
    "prepublishOnly": "npm run build && cp ../../README.md .",
    "postpublish": "npm run clean-core"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.5",
    "vite": "^5.3.1",
    "vue": "^3.0.0"
  },
  "license": "MIT"
}
